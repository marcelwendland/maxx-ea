//+------------------------------------------------------------------+
//| Logging Utility Namespace                                        |
//+------------------------------------------------------------------+
namespace Log
{
   //+------------------------------------------------------------------+
   //| Log an informational message                                    |
   //+------------------------------------------------------------------+
   void Info(const string message)
   {
      Print("[INFO] ", message);
   }

   //+------------------------------------------------------------------+
   //| Log a warning message                                           |
   //+------------------------------------------------------------------+
   void Warn(const string message)
   {
      Print("[WARN] ", message);
   }

   //+------------------------------------------------------------------+
   //| Log an error message                                            |
   //+------------------------------------------------------------------+
   void Error(const string message)
   {
      Print("[ERROR] ", message);
   }
}
//+------------------------------------------------------------------+
